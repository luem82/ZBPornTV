<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/black"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/cateThumb"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            app:riv_corner_radius="8dp" />

        <TextView
            android:id="@+id/cateTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cateThumb"
            android:layout_alignBaseline="@id/cateCount"
            android:layout_alignParentLeft="true"
            android:layout_margin="4dp"
            android:text="Cate Bum"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cateCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cateThumb"
            android:layout_alignParentRight="true"
            android:layout_margin="4dp"
            android:drawableLeft="@drawable/ic_video_count"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:text="518"
            android:textColor="@color/white"
            android:textSize="10sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>