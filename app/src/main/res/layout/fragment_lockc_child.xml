<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_2"
    android:orientation="vertical"
    tools:context=".fragments.LockcChildFragment">


    <TextView
        android:id="@+id/lockTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="center"
        android:text="@string/lock_children_title"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/lockEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialogTitle"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/background_corner_black"
        android:hint="Enter"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:padding="16dp"
        android:textColor="@color/white"
        android:textColorHint="@color/teal_200" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/lockSave"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:drawableLeft="@android:drawable/ic_menu_save"
        android:drawableTint="@color/white"
        android:padding="8dp"
        android:text="Save Passcode"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:backgroundTint="@color/orange"
        app:cornerRadius="8dp"
        app:strokeColor="@color/white"
        app:strokeWidth="2dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/lockOff"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:drawableLeft="@android:drawable/ic_lock_idle_lock"
        android:drawableTint="@color/white"
        android:padding="8dp"
        android:text="Turn Off Child Lock"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:backgroundTint="@color/orange"
        app:cornerRadius="8dp"
        app:strokeColor="@color/white"
        app:strokeWidth="2dp" />

</LinearLayout>