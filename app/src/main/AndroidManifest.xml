<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.zbporn">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ZBPorn">

        <activity
            android:name=".activities.SplashScreenActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.PasscodeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.ZBPorn.NoActionBar" />

        <activity
            android:name=".activities.FullVideoActivity"
            android:configChanges="screenSize|screenLayout|orientation|uiMode"
            android:theme="@style/Theme.ZBPorn.NoActionBar" />
        <activity
            android:name=".activities.ModelDetailActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.ZBPorn.NoActionBar" />
        <activity
            android:name=".activities.PlaylistDetailActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.ZBPorn.NoActionBar" />
        <activity
            android:name=".activities.ChannelDetailActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.ZBPorn.NoActionBar" />
        <activity
            android:name=".activities.AlbumDetailActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.ZBPorn.NoActionBar" />
        <activity
            android:name=".activities.SearchVideoActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.ZBPorn.NoActionBar" />
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.ZBPorn.NoActionBar"></activity>
    </application>

</manifest>