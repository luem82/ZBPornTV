<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/black"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/albumThumb"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            app:riv_corner_radius="8dp" />

        <TextView
            android:id="@+id/albumTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/albumThumb"
            android:ellipsize="end"
            android:maxLines="2"
            android:padding="4dp"
            android:text="Nasty Wives Wanna Get Porked By Massive Jizz Shotguns Only"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/albumDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/albumTitle"
            android:paddingLeft="4dp"
            android:paddingBottom="8dp"
            android:text="2 hours ago"
            android:textColor="@android:color/darker_gray"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/albumCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/albumThumb"
            android:layout_alignParentRight="true"
            android:layout_margin="4dp"
            android:background="@drawable/background_corner_blur"
            android:padding="4dp"
            android:text="24 Pics"
            android:textColor="@color/white"
            android:textSize="10sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>