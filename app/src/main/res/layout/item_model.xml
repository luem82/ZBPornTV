<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/black"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/modelThumb"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="4dp"
            android:scaleType="fitXY"
            app:riv_corner_radius="8dp" />

        <TextView
            android:id="@+id/modelName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/modelThumb"
            android:layout_alignParentLeft="true"
            android:padding="4dp"
            android:text="Nasty Wives"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/modelFlag"
            android:layout_width="24dp"
            android:layout_height="18dp"
            android:layout_below="@id/modelThumb"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/modelName"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/modelVideos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/modelName"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="4dp"
            android:drawableLeft="@drawable/ic_video_count"
            android:drawablePadding="4dp"
            android:text="25"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/modelAlbums"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/modelName"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="4dp"
            android:layout_toRightOf="@id/modelVideos"
            android:drawableLeft="@drawable/ic_album_count"
            android:drawablePadding="4dp"
            android:text="12"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/modelRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/modelName"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:drawableLeft="@drawable/ic_rate_small"
            android:drawablePadding="4dp"
            android:text="95%"
            android:textColor="@color/white"
            android:textSize="10sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>