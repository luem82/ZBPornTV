<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.PasscodeActivity">

    <com.hanks.passcodeview.PasscodeView
        android:id="@+id/passcodeView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_2"
        app:correctInputTip="Passcode is correct"
        app:correctStateColor="@android:color/holo_green_dark"
        app:firstInputTip="Enter passcode"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:normalStateColor="@color/white"
        app:numberTextColor="@color/gray_2"
        app:passcodeViewType="set_passcode"
        app:wrongInputTip="Passcode is wrong...!"
        app:wrongStateColor="@android:color/holo_red_light" />

</androidx.constraintlayout.widget.ConstraintLayout>